# Import libraries 
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

plt.style.use("ggplot")

# Data Understanding
import pandas as pd

# Create a small Covid dataset inside notebook
data = {
    "date": ["2020-01-01", "2020-01-02", "2020-01-03"],
    "confirmed": [100, 150, 200],
    "deaths": [1, 2,3],
    "recovered": [10, 20, 40]
}

# Create DataFrame
df = pd.DataFrame(data)

# Show DataFrame
df

# Data Cleaning
df['date'] = pd.to_datetime(df['date'])

df.fillna(0, inplace=True)

df.drop_duplicates(inplace=True)

# Exploratory Data Analysis (EDA)
# Line plot: Total confirmed cases over time
plt.figure(figsize=(12,5))
plt.plot(df['date'], df['confirmed'])
plt.title("Confirmed Covid-19 Cases Over Time")
plt.xlabel("Date")
plt.ylabel("Confirmed Cases")
plt.show()

# Deaths over time
plt.figure(figsize=(12,5))
plt.plot(df['date'], df['deaths'])
plt.title("Deaths Over Time")
plt.xlabel("Date")
plt.ylabel("Deaths")
plt.show()

# Recoveries over time
plt.figure(figsize=(12,5))
plt.plot(df['date'], df['recovered'])
plt.title("Recoveries Over Time")
plt.xlabel("Date")
plt.ylabel("Recovered")
plt.show()

# Vaccination vs Covid-19 Spread
import seaborn as sns
import matplotlib.pyplot as plt

# Check if 'vaccinations' column exists
if "vaccinations" in df.columns:
    sns.scatterplot(x=df["vaccinations"], y=df["confirmed"])
    plt.title("Vaccinations vs Confirmed Cases")
    plt.show()
else:
    print("âš  Column 'vaccinations' not found in dataset. Scatter plot skipped.")

# Correlation Heat map
plt.figure(figsize=(8,5))
sns.heatmap(df.corr(), annot=True, cmap="coolwarm")
plt.title("Correlation Between Variables")
plt.show()
